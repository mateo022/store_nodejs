<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Users</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="alert alert-success">Users</h1>
    <div class="row">
      <div class="col-md-2"></div>
          <div class="col-md-8">
              <table class="table table-bordered border-primary">
                  <tr class="table-success">
                      <th>Id del usuario</th>
                      <th>Nombre del usuario</th>
                      <th>Nickname del usuario</th>
                      <th>Contraseña del usuario</th>
                      <th>Editar</th>
                      <th>Eliminar</th>
                  </tr>
                    <% users.map( (users) =>{%>
                      <tr class="table-warning">
                          <td><%= users.id_user %></td>
                          <td><%= users.name %></td>
                          <td><%= users.username %></td>
                          <td><%= users.password %></td>
                          <td><a href="/admin/users/edit/<%= users.id_user %>" class="btn btn-success">Editar</a></td>
                          <td>
                            <form action="/admin/users/destroy/<%= users.id_user %>" method="POST">
                              <input type="submit" class="btn btn-danger" onclick="return confirm('Está Seguro?')" value = "Delete">
                            </form>
                          </td>
                      </tr>
                      <% }) %>
              </table>
              <a href="/admin/users/create" class="btn btn-primary">Create new User</a>
          </div>
      <div class="col-md-2"></div>
  </div>
  </body>
</html>