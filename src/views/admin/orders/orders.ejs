<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="alert alert-success">Orders</h1>
    <div class="row">
      <div class="col-md-1"></div>
          <div class="col-md-10">
              <table class="table table-bordered border-primary">
                  <tr class="table-success">
                      <th>Id de la orden</th>
                      <th>Nombre</th>
                      <th>Apellidos</th>
                      <th>Correo Electronico</th>
                      <th>Dirección</th>
                      <th>Fecha de la orden</th>
                      <th>Producto elegido</th>
                      <th>Precio</th>
                      <th>Eliminar</th>
                  </tr>
                    <% orders.map( (orders) =>{%>
                      <tr class="table-warning">
                          <td><%= orders.order_id %></td>
                          <td><%= orders.order_name %></td>
                          <td><%= orders.order_last_name %></td>
                          <td><%= orders.order_email %></td>
                          <td><%= orders.order_address %></td>
                          <td><%= orders.order_date %></td>
                          <td><%= orders.product.product_name %></td>
                          <td><%= orders.product.product_price %></td>
                          <td>
                            <form action="/admin/orders/destroy/<%= orders.order_id %>" method="POST">
                              <input type="submit" class="btn btn-danger" onclick="return confirm('Está Seguro?')" value = "Delete">
                            </form>
                          </td>
                      </tr>
                      <% }) %>
              </table>
              <a href="/admin/orders/create" class="btn btn-primary">Create new Order</a>
            </div>
          </div>
      <div class="col-md-1"></div>
  </div>
  </body>
</html>