<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="alert alert-success">Edit Product</h1>
    <div class="row">
      <div class="col-md-2"></div>
          <div class="col-md-8">
              <!-- Formulario -->
              <form method="POST" action="/admin/products/update" enctype="multipart/form-data">
                <input type="number" id="product_id" name="product_id" value="<%=product.product_id%>" hidden>
                <div class="mb-3">
                  <label for="product_name" class="form-label">Nombre del producto</label>
                  <input name="product_name" type="text" class="form-control" id="product_name" value="<%=product.product_name%>">
                </div>
                <div class="mb-3">
                  <label for="product_reference" class="form-label">Referencia del producto</label>
                  <input name="product_reference" type="text" class="form-control" id="product_reference" value="<%=product.product_reference%>">
                </div>
                <div class="mb-3">
                    <label for="product_size" class="form-label">Tama√±o del producto</label>
                    <input name="product_size" type="text" class="form-control" id="product_size" value="<%=product.product_size%>">
                  </div>
                  <div class="mb-3">
                    <label for="product_image" class="form-label">Descripcion del producto</label>
                    <input name="product_description" type="text" class="form-control" id="product_description" value="<%=product.product_description%>">
                  </div>
                  <div class="mb-3">
                    <label for="product_image" class="form-label">Imagen del producto</label>
                    <input name="product_image" type="file" class="form-control" id="product_image" value="<%=product.product_image%>">
                  </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
          </div>
      <div class="col-md-2"></div>
  </div>
  </body>
</html>